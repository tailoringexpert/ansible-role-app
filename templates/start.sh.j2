#!/bin/bash

MAIN_CLASS={{ app.home }}/tailoringexpert-exec.jar
APP_CONFIG=file://{{ app.config }}/
LOADER_CONFIG=file:{{ app.lib }}/,file:{{ app.home }}/tailoringexpert-exec.jar
LOG_CONFIG=file://{{ app.config }}/{{ app.logconfig_file }}
SSL_CONFIG="-Djavax.net.ssl.trustStore={{ app.ssl.store }} -Djavax.net.ssl.trustStorePassword={{ app.ssl.password }}"
#BIN_DIR={ bin_dir }}

# ***********************************************
# ***********************************************

ARGS="-Dloader.path=${LOADER_CONFIG} ${SSL_CONFIG} -Dspring.config.additional-location=${APP_CONFIG} -Dlog4j2.configurationFile=${LOG_CONFIG}"

exec java $ARGS -jar $MAIN_CLASS 


